root = true

[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true

[*.{kt,kts}]
ktlint_code_style = ktlint_official # or android_studio or ktlint_official (default)
ktlint_standard_no-wildcard-imports = disabled
indent_size = 4
max_line_length = 120
disabled_rules = import-ordering, filename