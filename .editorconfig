root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.{kt,kts}]
ktlint_code_style = intellij_idea # or android_studio or ktlint_official (default)
ktlint_standard_no-wildcard-imports = disabled